<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:layout_margin="24dp"/>

        <EditText
            android:id="@+id/edtTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:hint="Celular"
            android:inputType="phone" />

        <LinearLayout
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_margin="24dp"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/rdgTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="24dp">
                <RadioButton android:id="@+id/rdPessoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pessoal"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/rdTrabalho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trabalho"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:id="@+id/edtReferenciaContato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="24dp"
            android:hint="ReferÃªncia"
            android:inputType="text" />

<!--        <EditText-->
<!--            android:id="@+id/edtEmailContato"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="24dp"-->
<!--            android:hint="E-mail"-->
<!--            android:inputType="textEmailAddress" />-->

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:layout_gravity="center_horizontal"
            android:text="Salvar"/>

        <EditText
            android:id="@+id/edtPesquise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pesquise por nome do Contato"
            android:inputType="text"
            android:layout_margin="24dp"/>

        <Button
            android:id="@+id/btnPesquisar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Pesquisar" />

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ola"
             />

        <Button
            android:id="@+id/btnExibir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Exibir todos os contatos"/>

    </LinearLayout>
</ScrollView>